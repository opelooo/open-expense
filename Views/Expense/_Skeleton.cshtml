@{
    int tableRows = ViewData["tableRows"] as int? ?? 5;
    bool showPagination = ViewData["showPagination"] as bool? ?? true;
}

<!-- SKELETON LOADING STATE -->
<div id="skeleton-loading">
    <!-- Filters & Actions Skeleton -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <div class="skeleton skeleton-text" style="width: 100px; margin-right: 10px;"></div>
                        <div class="skeleton" style="width: 80px; height: 38px; border-radius: 0.375rem;"></div>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <div class="skeleton" style="width: 140px; height: 38px; border-radius: 0.375rem; display: inline-block;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Skeleton -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><div class="skeleton skeleton-text" style="width: 80px;"></div></th>
                            <th><div class="skeleton skeleton-text" style="width: 150px;"></div></th>
                            <th><div class="skeleton skeleton-text" style="width: 120px;"></div></th>
                            <th class="text-end"><div class="skeleton skeleton-text" style="width: 100px;"></div></th>
                            <th class="text-center"><div class="skeleton skeleton-text" style="width: 150px;"></div></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < tableRows; i++)
                        {
                            <tr>
                                <td><div class="skeleton skeleton-text"></div></td>
                                <td><div class="skeleton skeleton-text"></div></td>
                                <td>
                                    <div class="skeleton skeleton-text" style="width: 100px; height: 24px; border-radius: 0.375rem;"></div>
                                </td>
                                <td class="text-end"><div class="skeleton skeleton-text" style="width: 80px;"></div></td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-1">
                                        <div class="skeleton" style="width: 60px; height: 30px; border-radius: 0.375rem;"></div>
                                        <div class="skeleton" style="width: 60px; height: 30px; border-radius: 0.375rem;"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination Skeleton -->
    @if (showPagination)
    {
        <div class="d-flex justify-content-between align-items-center">
            <div class="skeleton skeleton-text" style="width: 150px;"></div>
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    @for (int i = 0; i < 5; i++)
                    {
                        <li class="page-item"><div class="skeleton skeleton-text" style="width: 40px; height: 38px; border-radius: 0.375rem;"></div></li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

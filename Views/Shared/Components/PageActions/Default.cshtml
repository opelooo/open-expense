@model OpenExpenseApp.Views.Shared.Components.PageActionsViewModel

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <label class="me-2 text-muted">Items per page:</label>
                    <select id="pageSizeSelect" class="form-select form-select-sm" style="width: auto;">
                        @foreach (int size in Model.PageSizes)
                        {
                            if (Model.PageSize == size)
                            {
                                <option value="@size" selected>@size</option>
                            }
                            else
                            {
                                <option value="@size">@size</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Model.CreateUrl" class="btn @Model.CreateCssClass">
                    <i class="bi bi-plus-lg me-1"></i>@Model.CreateText
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('pageSizeSelect').addEventListener('change', function () {
        const pageSize = this.value;
        const currentUrl = window.location.pathname;
        window.location.href = `${currentUrl}?page=1&pageSize=${pageSize}`;
    });
</script>

@model OpenExpenseApp.Views.Shared.Components.PaginationViewModel
@{
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}

<div class="d-flex justify-content-between align-items-center">
    <small class="text-muted">Menampilkan @Model.ItemsCount dari @Model.TotalItems items</small>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                <!-- Previous Page -->
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="/@Model.Controller?page=@(Model.CurrentPage - 1)&pageSize=@Model.PageSize">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                <!-- Page Numbers -->
                @if (startPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="/@Model.Controller?page=1&pageSize=@Model.PageSize">1</a></li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="/@Model.Controller?page=@i&pageSize=@Model.PageSize">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item"><a class="page-link" href="/@Model.Controller?page=@Model.TotalPages&pageSize=@Model.PageSize">@Model.TotalPages</a></li>
                }

                <!-- Next Page -->
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" href="/@Model.Controller?page=@(Model.CurrentPage + 1)&pageSize=@Model.PageSize">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

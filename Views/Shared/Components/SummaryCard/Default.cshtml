@model AccountingApp.Views.Shared.Components.SummaryCardViewModel

<div class="col-md-3">
    <div class="card border-0 shadow-sm h-100">
        <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                    <p class="text-muted mb-1">@Model.Title</p>
                    <h4 class="mb-0">@Model.Value</h4>
                </div>
                <div class="@Model.IconBgClass p-2 rounded flex-shrink-0 custom-icon">
                    <i class="@Model.IconClass"></i>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Subtitle))
            {
                <small class="text-muted mt-auto">@Model.Subtitle</small>
            }
        </div>
    </div>
</div>

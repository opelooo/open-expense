<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AccountingApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AccountingApp.styles.css" asp-append-version="true" />
</head>
<body>
    @if (Context.Session.GetString("UserId") != null)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AccountingApp</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav grow">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Expense" asp-action="Index">Expenses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="d-flex me-3">
                    <div class="align-self-center me-2 text-nowrap">
                    User: @Context.Session.GetString("Username")
                    </div>
                    <form id="logoutForm" method="post" asp-controller="Authentication" asp-action="Logout" class="ms-3">
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmLogout()">Logout</button>
                    </form>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Opelooo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["ShowAlert"] is bool showAlert && showAlert)
    {
        <script>
            @{
                var alertDataJson = TempData["AlertData"]?.ToString() ?? "{}";
                // Clear TempData setelah diambil agar tidak menumpuk
                TempData.Remove("ShowAlert");
                TempData.Remove("AlertData");
            }
            const alertConfig = @Html.Raw(alertDataJson);
            
            Swal.fire({
                title: alertConfig.title || 'Info',
                text: alertConfig.message || '',
                icon: alertConfig.icon || 'info',
                confirmButtonText: alertConfig.confirmButtonText || 'OK',
                cancelButtonText: alertConfig.cancelButtonText || 'Cancel',
                showCancelButton: alertConfig.showCancelButton || false,
                showConfirmButton: alertConfig.showConfirmButton !== false,
                allowOutsideClick: alertConfig.allowOutsideClick !== false,
                allowEscapeKey: alertConfig.allowEscapeKey !== false,
                timer: alertConfig.timer || undefined,
                timerProgressBar: alertConfig.timer ? true : false
            });
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Open Expense App</title>
    <script type="importmap"></script>
    <link rel="preload" href="~/lib/bootstrap/dist/css/bootstrap.min.css" as="style" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/bootstrap/icons/bootstrap-icons-1.13.1/bootstrap-icons.min.css" media="print" onload="this.media='all'">

    <link rel="stylesheet" href="~/css/site-min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OpenExpenseApp.styles.css" asp-append-version="true" />
    <!-- Inline script to prevent theme flash -->
    <script>
            (function () {
                const savedTheme = localStorage.getItem('theme');
                const defaultTheme = 'dark';
                const theme = savedTheme || defaultTheme;
                document.documentElement.setAttribute('data-theme', theme);
            })();
    </script>
</head>
    <body>
        @if (Context.Session.GetString("UserId") != null)
        {
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Open Expense App</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                                aria-controls="navbarSupportedContent"                  aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav grow">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Expense" asp-action="Index">Expenses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Income" asp-action="Index">Incomes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="d-flex align-items-center me-3">
                        <!-- Theme Toggle Button -->
                        <button class="theme-toggle-btn me-3" onclick="toggleTheme()" title="Toggle Dark/Light Mode">
                            <i id="theme-icon" class="bi bi-moon-fill"></i>
                        </button>
                        <div class="align-self-center me-2 text-nowrap">
                            User: @Context.Session.GetString("Username")
                        </div>
                        <form id="logoutForm" method="post" asp-controller="Authentication" asp-action="Logout" class="ms-3">
                            <button type="button" class="btn btn-outline-danger btn-sm"
                                    onclick="confirmLogout()">Logout</button>
                        </form>
                    </div>
                </nav>
            </header>
        }
        <div class="container flex-grow-1">
            <main role="main" class="pb-3" style="min-height: 100dvh;">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2026 - Open Expense App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
        <script src="~/js/site-min.js" asp-append-version="true" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>

        @if (TempData["ShowAlert"] is bool showAlert && showAlert)
        {
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    @{
                        var alertDataJson = TempData["AlertData"]?.ToString() ?? "{}";
                        // Clear TempData setelah diambil agar tidak menumpuk
                        TempData.Remove("ShowAlert");
                        TempData.Remove("AlertData");
                    }
                    const alertConfig = @Html.Raw(alertDataJson);

                    // Get current theme
                    const currentTheme = document.documentElement.getAttribute('data-theme') || 'dark';
                    const isDarkMode = currentTheme === 'dark';

                    Swal.fire({
                        title: alertConfig.title || 'Info',
                        text: alertConfig.message || '',
                        icon: alertConfig.icon || 'info',
                        confirmButtonText: alertConfig.confirmButtonText || 'OK',
                        cancelButtonText: alertConfig.cancelButtonText || 'Cancel',
                        showCancelButton: alertConfig.showCancelButton || false,
                        showConfirmButton: alertConfig.showConfirmButton !== false,
                        allowOutsideClick: alertConfig.allowOutsideClick !== false,
                        allowEscapeKey: alertConfig.allowEscapeKey !== false,
                        timer: alertConfig.timer || undefined,
                        timerProgressBar: alertConfig.timer ? true : false,
                        // Dark mode configuration
                        background: isDarkMode ? '#2c3034' : '#ffffff',
                        color: isDarkMode ? '#f8f9fa' : '#212529',
                        confirmButtonColor: '#0d6efd',
                        cancelButtonColor: '#6c757d',
                        iconColor: isDarkMode ? '#6ea8fe' : undefined
                    });
                });
            </script>
        }
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
@{
    // Parameters with defaults - using nullable type approach
    int cardCount = ViewData["cardCount"] as int? ?? 4;
    int tableRows = ViewData["tableRows"] as int? ?? 5;
    int chartSections = ViewData["chartSections"] as int? ?? 4;
    bool showTable = ViewData["showTable"] as bool? ?? true;
    bool showChart = ViewData["showChart"] as bool? ?? true;
    bool showActions = ViewData["showActions"] as bool? ?? true;
}

<!-- SKELETON LOADING STATE -->
<div id="skeleton-loading">
    <!-- Summary Cards Skeleton -->
    @if (cardCount > 0)
    {
        <div class="row g-3 mb-4">
            @for (int i = 0; i < cardCount; i++)
            {
                <div class="col-md-@(12 / Math.Min(cardCount, 4))">
                    <div class="card border-0 shadow-sm h-100 skeleton-card">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="w-100">
                                    <div class="skeleton skeleton-text subtitle mb-2"></div>
                                    <div class="skeleton skeleton-text amount"></div>
                                </div>
                                <div class="skeleton skeleton-icon ms-2"></div>
                            </div>
                            <div class="skeleton skeleton-text subtitle mt-auto"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="row g-3 mb-4">
        <!-- Table Skeleton -->
        @if (showTable)
        {
            <div class="col-md-@(showChart ? 8 : 12)">
                <div class="card border-0 shadow-sm">
                    <div class="card-header py-3">
                        <div class="skeleton skeleton-text title"></div>
                    </div>
                    <div class="card-body p-0 skeleton-table" style="padding: 1rem;">
                        @for (int i = 0; i < tableRows; i++)
                        {
                            <div class="skeleton skeleton-text"></div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Chart Skeleton -->
        @if (showChart)
        {
            <div class="col-md-@(showTable ? 4 : 12)">
                <div class="card border-0 shadow-sm h-100 skeleton-card">
                    <div class="card-header py-3">
                        <div class="skeleton skeleton-text title"></div>
                    </div>
                    <div class="card-body">
                        @for (int i = 0; i < chartSections; i++)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <div class="skeleton skeleton-text subtitle" style="width: 40%;"></div>
                                    <div class="skeleton skeleton-text subtitle" style="width: 30%;"></div>
                                </div>
                                <div class="skeleton skeleton-progress"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Actions Skeleton -->
    @if (showActions)
    {
        <div class="row g-3">
            <div class="col-12">
                <div class="card border-0 shadow-sm skeleton-card">
                    <div class="card-body">
                        <div class="skeleton skeleton-text title mb-3"></div>
                        <div class="d-flex gap-2">
                            <div class="skeleton" style="width: 120px; height: 38px; border-radius: 0.375rem;"></div>
                            <div class="skeleton" style="width: 140px; height: 38px; border-radius: 0.375rem;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
